@{
    ViewData["Title"] = "Home Page";
}

<div class = "bd">
    <div class="title-header">
        <h1 id = "spell-title" class="display-4">Spell Checker</h1>
        </br>
        <p class = "text-muted" id = "spell-info">Check your English text for spelling errors </br> with this online spell checker.</p>
    </div>

    <div class = "spell-container text-center">
        <form id = "input-form" action="">
            <textarea id="input-text-form" rows="12" cols="70" placeholder = "Start writing here."></textarea>
            </br>
            <input id = "check-button" type="submit" value="Check your text">
        </form>
    </div>    
</div>

